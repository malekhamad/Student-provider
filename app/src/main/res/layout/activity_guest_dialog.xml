<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cancelLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:background="@color/white"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <com.astudent.partner.Utils.ClanProTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Guest Login"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"/>

        <com.astudent.partner.Utils.ClanProTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:lineSpacingMultiplier="1.3"
            android:padding="@dimen/_3sdp"
            android:text="Please login/signin to continue"
            android:textColor="@color/main_color_gray"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_30sdp">

            <com.astudent.partner.Utils.ClanProButton
                android:id="@+id/guestCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="3"
                android:background="@null"
                android:gravity="end|center_vertical"
                android:text="Cancel"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_5sdp" />


            <com.astudent.partner.Utils.ClanProButton
                android:id="@+id/guestLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|center_vertical"
                android:text="Login"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
